@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<section class="admin-dashboard spad">
    <div class="container">
        <h2 class="text-center mb-5" style="color:#8B4513;">Admin Dashboard</h2>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="dashboard-item text-center">
                    <i class="fa fa-list-alt fa-3x mb-3"></i>
                    <h4>Manage Room Types</h4>
                    <a href="@Url.Action("GetRoomTypes", "Admin")" class="primary-btn">Go</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="dashboard-item text-center">
                    <i class="fa fa-bed fa-3x mb-3"></i>
                    <h4>Manage Rooms</h4>
                    <a href="@Url.Action("Rooms", "Admin")" class="primary-btn">Go</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="dashboard-item text-center">
                    <i class="fa fa-calendar-check-o fa-3x mb-3"></i>
                    <h4>View Bookings</h4>
                    <a href="@Url.Action("Bookings", "Admin")" class="primary-btn">Go</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Card style */
    .dashboard-item {
        background: #fff;
        padding: 40px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
