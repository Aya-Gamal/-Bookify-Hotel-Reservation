@model IEnumerable<Bookify.Data.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
    Layout = "_Layout";
}

<section class="spad">
    <div class="container">
        <h2 class="text-center mb-4" style="color:#8B4513;">All Bookings</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center mb-4">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center mb-4">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped text-center">
                <thead class="table-dark" style="background-color:#8B4513; color:white;">
                    <tr>
                        <th>Booking ID</th>
                        <th>Room Number</th>
                        <th>Room Type</th>
                        <th>User Name</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                        <th>Total Price ($)</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td>@b.Room?.RoomNumber</td>
                            <td>@b.Room?.RoomType?.Name</td>
                            <td>@b.User.UserName</td>
                            <td>@b.CheckInDate.ToShortDateString()</td>
                            <td>@b.CheckOutDate.ToShortDateString()</td>
                            <td>@b.TotalPrice.ToString("F2")</td>
                            <td>
                                <span class="badge
                                    @(b.Status == Bookify.Data.Models.BookingStatus.Confirmed ? "bg-success" :
                                      b.Status == Bookify.Data.Models.BookingStatus.Pending ? "bg-warning text-dark" :
                                      b.Status == Bookify.Data.Models.BookingStatus.Cancelled ? "bg-danger" : "bg-secondary")">
                                    @b.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@b.Id" class="btn btn-info btn-sm">View</a>
                                <a asp-action="DeleteBooking" asp-route-id="@b.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this booking?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f0e6;
        transition: 0.3s;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.7em;
        border-radius: 0.3rem;
    }
</style>
